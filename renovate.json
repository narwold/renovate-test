{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["npm", "regex", "dockerfile"],
  "dependencyDashboard": true,
  "enabled": true,
  "regexManagers": [
    {
      "fileMatch": ["^myversionsfile.json$"],
      "matchStrings": ["\"node:(?<currentValue>[^\"]*)\"\\]"],
      "autoReplaceStringTemplate": "\"node:{{{currentValue}}}\", \"node:{{{newValue}}}\"]",
      "depNameTemplate": "node",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^\\.nvmrc$"],
      "matchStrings": ["^n:(?<currentValue>[0-9\\.]*)"],
      "autoReplaceStringTemplate": "n:{{{newValue}}}",
      "depNameTemplate": "node",
      "datasourceTemplate": "docker"
    }
  ]
}
